{
  "mcpServers": {
    "github-minimal": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "disabled": false,
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "settings": {
        "enabledTools": [
          "get_file_contents",
          "list_repositories", 
          "search_code",
          "get_issue",
          "create_issue",
          "list_issues",
          "get_pull_request",
          "list_pull_requests"
        ],
        "disabledTools": [
          "create_repository",
          "delete_file", 
          "create_pull_request",
          "merge_pull_request",
          "create_branch",
          "delete_repository",
          "update_repository",
          "fork_repository",
          "create_release",
          "upload_file",
          "admin_operations",
          "webhook_management",
          "security_alerts",
          "code_scanning",
          "secret_scanning",
          "dependency_alerts",
          "advanced_search",
          "statistics",
          "traffic_analytics",
          "insights",
          "projects",
          "packages",
          "actions",
          "environments",
          "deployments",
          "pages",
          "wiki",
          "discussions",
          "sponsors",
          "marketplace",
          "apps"
        ],
        "maxConcurrentRequests": 3,
        "requestTimeout": 30000
      }
    }
  }
}
