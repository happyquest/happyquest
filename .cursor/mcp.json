{
  "mcpServers": {
    "atlassian": {
      "command": "npx",
      "args": ["-y", "@dsazz/mcp-jira"],
      "disabled": false,
      "env": {
        "JIRA_HOST": "https://happyquest.atlassian.net",
        "JIRA_EMAIL": "nanashi7777@example.com",
        "JIRA_API_TOKEN": "ATATT3xFfGF0NnqbL3W4YolNIQcX1jM5HXqn8YW6TIHLOF5pupiY9QZvJTJ0wPghpNNCrO6xq8OJ1UbxCqF2Shcbf-A2QboI4eSt4oNr70jYtgo_Jkz-GqEtouP7ydwXuilXWqJ3HMd69_AJgvVGPidSvxmWr98I_zRwe4WUEwKN9bNG17KpCN8=46CA7A25"
      },
      "settings": {
        "enabledTools": [
          "list_projects",
          "get_project", 
          "list_issues",
          "get_issue",
          "create_issue",
          "update_issue",
          "add_comment",
          "search_issues"
        ],
        "maxConcurrentRequests": 3,
        "requestTimeout": 240000
      },
      "description": "Atlassian Jira MCP Server - dsazz実装"
    },
    "github-stable": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "disabled": false,
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "settings": {
        "enabledTools": [
          "get_file_contents",
          "list_repositories", 
          "search_code",
          "get_issue",
          "create_issue",
          "list_issues",
          "get_pull_request",
          "list_pull_requests"
        ],
        "maxConcurrentRequests": 3,
        "requestTimeout": 240000
      },
      "description": "HappyQuest安定版GitHub MCP - 8ツール最適化"
    },
    "browser-docker": {
      "command": "docker",
      "args": [
        "run", "-i", "--rm",
        "--name", "happyquest-browser-mcp",
        "-e", "DISPLAY=:0",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw",
        "--shm-size=2gb",
        "ghcr.io/microsoft/playwright:v1.40.0-focal"
      ],
      "disabled": true,
      "settings": {
        "enabledTools": [
          "browser_navigate",
          "browser_snapshot",
          "browser_click",
          "browser_type",
          "browser_take_screenshot"
        ],
        "resourceLimits": {
          "memory": "1GB",
          "cpu": "1"
        }
      },
      "description": "Docker化ブラウザ自動化 - サンドボックス実行"
    }
  },
  "globalSettings": {
    "totalToolLimit": 40,
    "preferredProvider": "github-stable",
    "defaultTimeout": 240000,
    "optimization": {
      "memoryLimit": "256MB",
      "cacheEnabled": true,
      "compressionEnabled": true
    }
  }
}
