{
  "name": "happyquest-monitoring",
  "version": "1.0.0",
  "description": "HappyQuest????????? with ???????",
  "main": "monitoring/monitoring-dashboard.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:monitoring": "jest tests/monitoring/",
    "start:monitoring": "node monitoring/monitoring-dashboard.js",
    "demo": "node monitoring/monitoring-dashboard.js --demo",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "monitoring",
    "alerts",
    "playwright",
    "mcp",
    "test-driven-development"
  ],
  "author": "HappyQuest Team",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "@playwright/test": "^1.40.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "fs-extra": "^11.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "monitoring/**/*.js",
      "!monitoring/**/*.test.js",
      "!node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}